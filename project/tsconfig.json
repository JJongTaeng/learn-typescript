{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true, // @ts-check
    "target": "ES5", // tsc 명령어로 파일을 변환할 때 변환하는 언어 버전
    "outDir": "./built",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "typeRoots": ["./node_modules/@types", "./types"] // 외부 라이브러리 타입을 찾아가는 경로,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictBindCallApply": true
  },
  "include": ["./src/**/*"] // src 폴더 내 모든 대상을 컴파일 하겠다.
}